<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".complete_profile_Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Taxigo.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EFC41A"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextColor="@color/textcolor"
            app:expandedTitleTextColor="@color/textcolor"
            app:title="Complete Profile"
            app:contentScrim="#EFC41A"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon"
                app:layout_collapseMode="parallax"
                app:tint="#6AF4FF81" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Theme.Taxigo.PopupOverlay">
                <ImageView
                    android:id="@+id/completeprofileback"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/arrow_back_icon" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:textColor="@color/textcolor"
                    android:drawableStart="@drawable/help_support_icon"
                    android:layout_marginEnd="20dp"
                    android:text="Support" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Whats's pending?"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="@color/hintcolor"
                android:text="Email address"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="@color/hintcolor"
                android:text="Date of birth"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="@color/hintcolor"
                android:text="Add a payment method"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="@color/hintcolor"
                android:text="Home location"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="@color/hintcolor"
                android:text="Work location"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="@color/hintcolor"
                android:text="Emergency contacts"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textSize="18sp" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/hintcolor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableTint="@color/hintcolor"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Completed"
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="#18831D"
                android:text="Sign Up"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="#18831D"
                android:text="Name"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableEnd="@drawable/done_icon"
                android:drawableTint="#18831D"
                android:text="Book yout first ride"
                android:padding="4dp"
                android:textColor="@color/textcolor"
                android:textColorHint="@color/hintcolor"
                android:textSize="18sp" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>