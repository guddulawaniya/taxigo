<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Auto_fragment_claims">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:src="@drawable/imagebikeperson" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DDDDDD"
                android:padding="15dp"
                android:gravity="center"
                android:layout_margin="20dp"
                android:text="For Taxigo Auto accident claim or any question regarding it. please write a mail to shoutout@taxigo.bike"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:gravity="center"
                android:layout_margin="20dp"
                android:text="we will do our best to resolve your issue. Our support team is here for you , drop us a mail"
                android:textColor="#7A7777"
                android:textSize="11sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/emailredirect"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Email us"
                    android:layout_margin="10dp"
                    android:src="@drawable/treatment_icon"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:textColor="#FFEE54" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>