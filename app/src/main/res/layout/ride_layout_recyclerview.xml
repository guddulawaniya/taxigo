<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="3dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/white"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="2023-05-03"
                    android:textColor="@color/hintcolor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text="â‚¹ 0.0"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView

                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/cancelled"
                    android:textColor="#E10707"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:text="@string/cash"
                    android:textColor="@color/textcolor"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#DADADA" />

            <TextView
                android:id="@+id/startaddressselect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableStart="@drawable/dot"
                android:drawablePadding="15dp"
                android:drawableTint="@color/greendotcolor"
                android:singleLine="true"
                android:text="140, Ghanshyam vihar , Panchyawala , jaipur  Rajsthan.."
                android:textColor="@color/textcolor" />

            <TextView

                android:id="@+id/endaddressselect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/dot"
                android:drawablePadding="15dp"
                android:singleLine="true"
                android:drawableTint="@color/reddotcolor"
                android:text="140, Ghanshyam vihar , Panchyawala , jaipur  Rajsthan.."
                android:textColor="@color/textcolor" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>